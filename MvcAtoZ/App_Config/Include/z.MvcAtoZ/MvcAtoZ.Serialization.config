<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <unicorn>
      <configurations>
        <configuration name="MvcAtoZ">
          <predicate>
            <include name="Content" database="master" path="/sitecore/content" />
            <include name="Layouts" database="master" path="/sitecore/layout/Layouts/MvcAtoZ" />
            <include name="Placeholder Settings" database="master" path="/sitecore/layout/Placeholder Settings/MvcAtoZ" />
            <include name="Renderings" database="master" path="/sitecore/layout/Renderings/MvcAtoZ" />
            <include name="Media Library" database="master" path="/sitecore/media library/MvcAtoZ" />
            <include name="Templates" database="master" path="/sitecore/templates/MvcAtoZ" />
            <include name="Branch Templates" database="master" path="/sitecore/templates/Branches/MvcAtoZ" />
          </predicate>

          <dataProviderConfiguration enableTransparentSync="true" />

          <syncConfiguration updateLinkDatabase="false" updateSearchIndex="false" />
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>
