<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Html.Sitecore().Field("title", new { DisableWebEdit = true }) - Sitecore and MVC A-to-Z</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.simplex.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    @Html.Sitecore().Placeholder("navigation")
    <div class="container body-content">
        @Html.Sitecore().Placeholder("content-main")
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sitecore and MVC A-to-Z</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
